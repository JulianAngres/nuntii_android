<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".itinerary_overview">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_flightInformation"
        android:layout_width="409dp"
        android:layout_height="530dp"
        android:layout_marginTop="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_addConnection"
        app:layout_constraintBottom_toTopOf="@+id/btn_deleteItinerary"/>

    <TextView
        android:id="@+id/tv_itineraryOverview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Itinerary Overview"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_deleteItinerary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Delete Itinerary"
        app:backgroundTint="#F44336"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btn_confirmItinerary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Confirm Itinerary"
        app:backgroundTint="#0BE814"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btn_deleteItinerary"
        app:layout_constraintTop_toTopOf="@+id/btn_deleteItinerary"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="12dp"/>

    <Button
        android:id="@+id/btn_addConnection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add connection"
        app:backgroundTint="#FF9800"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_itineraryOverview"
        tools:layout_editor_absoluteY="57dp" />


</androidx.constraintlayout.widget.ConstraintLayout>